#!/usr/bin/python3
import json
from PIL import Image, ImageDraw, ImageFont

imgpath = "img/drake_800x800.png"
outputname = "meme.png"

fn = "img/drake_800x800.json"
data = open(fn).read()
data = json.loads(data)

ta = data['text_areas']

class TextArea:
    def __init__(self, x1, y1, x2, y2):
        self.x1 = x1
        self.y1 = y1
        self.x2 = x2
        self.y2 = y2

for a in ta:
    print(a)

image = Image.open(imgpath)

image.save(outputname)
